{{#css}}
  <link rel="stylesheet" href="{{@path}}">
{{/css}}

<h1 class="banner"> Burger Menu </h1>


<div class="burger_container">
  <div class="available_burgers">
    <h2>eat dis pls</h2>

    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.burger_name}}
          
            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit">eat it!</button>
            </form>

          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="eaten_burgers">
    <h2>Eaten Burgers</h2>

    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}

          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="add_burger">
  <form class="create-update-form" action="/" method="POST">
    <div class="form-group">
      <label for="burger" placeholder="Burger Name">Burger Name:</label>
      <input type="text" id="burger" name="name">
      <button id="add_burger_submit" type="submit">Add Burger</button>
    </div>
  </form>
</div>

