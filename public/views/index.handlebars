<h1> Burger Menu </h1>

<h2> available burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.eaten}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="eaten" value="true">
          <button type="submit">eat!</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>bye bye burgers</h2>

<ul>
  {{#each burgers}}
    {{#if this.eaten}}
      <li>
        {{this.name}}
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="eaten" value="false">
          <button type="submit">Make More!</button>
        </form>
        {{> burgers/delete-burger}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="burger" placeholder="Burger Name">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <div class="form-group">
     <button type="submit">Add Burger</button>
  </div>

 
</form>